<editor>
	<class>TabModelEditorDescriptor</class>
	<type>simple</type>
	<model>TextContent</model>
	<changeTypes>
		<changeType>model-editor-TextContent</changeType>
	</changeTypes>
	<title>
		<class>LanguageTitleME</class>
		<model>testLang</model>
		<field>title</field>
	</title>
	<data_fetchers>
		<data_fetcher>
			<class>SimpleDataFetcher</class>
		</data_fetcher>
		<data_fetcher>
			<class>LanguageDataFetcher</class>
		</data_fetcher> 
	</data_fetchers>
	<hooks>
		<hook>
			<name>ModelEditor.form</name>
			<modules>
				<module>
					<name>FieldValidator</name>
					<instance>form</instance>
					<params>
						<param name="validator" type="simple">TextContent</param>
					</params>
				</module>
				<module>
					<name>LanguageChooser</name>
					<instance>normal</instance>
				</module>
				<module>
					<name>ModelEditorLanguageFieldTranslator</name>
					<instance>normal</instance>
				</module>
			</modules>
		</hook>
	</hooks>
	<tabs>
		<tab>
			<class>TabME</class>
			<title>Base</title>
			<displayButtons>1</displayButtons>
			<inputs>
				<input>
					<key>title</key>
					<title>Title</title>
					<class>LanguageFieldME</class>
				</input>
				<input>
					<key>description</key>
					<model>testLang</model>
					<title>Description</title>
					<class>HTMLLanguageFieldME</class>
				</input>
			</inputs>
		</tab>
	</tabs>
</editor>
