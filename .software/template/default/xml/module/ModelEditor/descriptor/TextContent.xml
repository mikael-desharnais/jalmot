<editor>
	<class>ModelEditorDescriptor</class>
	<type>simple</type>
	<model>TextContent</model>
	<title>
		<class>SimpleTitleME</class>
		<model>testLang</model>
		<field>name</field>
	</title>
	<data_fetchers>
		<data_fetcher>
			<class>SimpleDataFetcher</class>
		</data_fetcher>
		<data_fetcher>
			<class>LanguageDataFetcher</class>
		</data_fetcher>
	</data_fetchers>
	<hooks>
		<hook>
			<name>ModelEditor.form</name>
			<modules>
				<module>
					<name>FieldValidator</name>
					<instance>form</instance>
					<params>
						<param name="validator" type="simple">TextContent</param>
					</params>
				</module>
				<module>
					<name>LanguageChooser</name>
					<instance>normal</instance>
				</module>
			</modules>
		</hook>
	</hooks>
	<inputs>
		<input>
			<key>name</key>
			<title>Name</title>
			<class>SimpleFieldME</class>
		</input>
		<input>
			<key>title</key>
			<title>Title</title>
			<class>LanguageFieldME</class>
		</input>
		<input>
			<key>description</key>
			<model>testLang</model>
			<title>Description</title>
			<class>HTMLLanguageFieldME</class>
		</input>
	</inputs>
</editor>
