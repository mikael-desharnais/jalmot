<?php $modelEditorContent =  $this->getConfParam('modelEditorContent'); ?>
<?php if (!empty($modelEditorCategory)){?>
<script> 
AjaxHTMLFetcher.setFetcher('new_<?php echo $this->model; ?>',new URL(Ressource.getConfiguration().getValue('AliasName')+'model_editor/<?php echo $this->getConfParam('modelEditorCategory'); ?>/',jQuery.extend({source:'create'},<?php echo json_encode($this->getCurrentCategoryParams()); ?>)),function(htmlContent){

	var window = new Window();
